{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://journium.app/schemas/journium-insight-tracker.v0Alpha.schema.json",
  "title": "Journium InsightTracker",
  "allOf": [
    {
      "$ref": "https://journium.app/schemas/journium-insight-tracker.base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "apiVersion": {
          "const": "journium.app/v0Alpha"
        },
        "spec": {
          "description": "Tracker specification.",
          "allOf": [
            {
              "type": "object",
              "properties": {
                "type": {
                  "$ref": "#/$defs/specType"
                }
              },
              "required": ["type"]
            },
            {
              "$ref": "#/$defs/LLMSpec"
            }
          ]
        }
      },
      "required": [
        "apiVersion",
        "spec"
      ]
    }
  ],
  "$defs": {
    "specType": {
      "type": "string",
      "enum": ["LLM"],
      "description": "Spec type discriminator. Valid value: 'LLM' for LLM-based trackers."
    },
    "trigger": {
      "type": "object",
      "description": "Controls when the tracker runs.",
      "required": [
        "mode"
      ],
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "automatic",
            "manual"
          ],
          "description": "If 'automatic', Journium runs this tracker on a schedule. If 'manual', it only runs when explicitly triggered."
        },
        "schedule": {
          "description": "Required when mode is 'automatic'. Either a preset cadence or a cron schedule.",
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "hourly",
                "daily",
                "weekly",
                "monthly"
              ],
              "description": "Preset schedule cadence."
            },
            {
              "type": "object",
              "description": "Cron-based schedule.",
              "additionalProperties": false,
              "required": [
                "cron"
              ],
              "properties": {
                "cron": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Cron expression (format/validation is handled by Journium at runtime)."
                }
              }
            }
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "mode": {
                "const": "automatic"
              }
            },
            "required": [
              "mode"
            ]
          },
          "then": {
            "type": "object",
            "properties": {
              "schedule": {
                "description": "Required when mode is 'automatic'. Either a preset cadence or a cron schedule.",
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "hourly",
                      "daily",
                      "weekly",
                      "monthly"
                    ],
                    "description": "Preset schedule cadence."
                  },
                  {
                    "type": "object",
                    "description": "Cron-based schedule.",
                    "additionalProperties": false,
                    "required": [
                      "cron"
                    ],
                    "properties": {
                      "cron": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Cron expression (format/validation is handled by Journium at runtime)."
                      }
                    }
                  }
                ]
              }
            },
            "required": [
              "schedule"
            ]
          }
        }
      ]
    },
    "LLMSpec": {
      "type": "object",
      "description": "LLM-based insight tracker spec.",
      "required": [
        "type",
        "trigger",
        "llmPrompt",
        "data"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "LLM",
          "description": "Spec type discriminator. Must be 'LLM' for LLM-based trackers."
        },
        "trigger": {
          "$ref": "#/$defs/trigger",
          "description": "Controls when the tracker runs."
        },
        "llmPrompt": {
          "type": "string",
          "minLength": 10,
          "maxLength": 5000,
          "description": "LLM prompt used to generate the insight."
        },
        "data": {
          "$ref": "#/$defs/dataSpec",
          "description": "Event data selection and limits."
        }
      }
    },
    "dataSpec": {
      "type": "object",
      "description": "Controls what event data is available to the tracker.",
      "additionalProperties": false,
      "properties": {
        "minEvents": {
          "type": "integer",
          "minimum": 1,
          "description": "Optional minimum number of events required to run the tracker."
        },
        "maxEvents": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "description": "Optional maximum number of events to consider. If omitted, the execution engine applies a reasonable default."
        },
        "events": {
          "description": "Events to include. Use '*' for all events, or provide an explicit allowlist of event names.",
          "oneOf": [
            {
              "type": "string",
              "const": "*",
              "description": "Include all events."
            },
            {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "string",
                "minLength": 1,
                "description": "Event name (e.g., 'signup_completed', 'habit_created')."
              },
              "description": "Explicit allowlist of event names."
            }
          ]
        }
      }
    }
  },
  "type": "object",
  "unevaluatedProperties": false
}